<Window x:Class="WPFMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ListView Height="300" Width="280" Margin="0, 15, 0, 0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Song"></GridViewColumn>
                        <GridViewColumn Header="Album"></GridViewColumn>
                        <GridViewColumn Header="Artist"></GridViewColumn>
                        <GridViewColumn Header="TrackNumber"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>